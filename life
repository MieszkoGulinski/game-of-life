/* Implementation of Game of Life for BREXX/370 running on MVS TK5 using FSS mode and matrices extension */

CALL IMPORT FSSAPI
ADDRESS FSS
CALL FSSINIT
CALL FSSTITLE 'Game of Life'
CALL FSSCOMMAND
CALL FSSCURSOR 'ZCMD'

width = 10
height = 10

currentBoard = MCREATE(width, height)
nextBoard = MCREATE(width, height)

/* Main loop */
DO FOREVER
  /* Display the board */
  DO y=1 TO height
    line = ''

    DO x=1 TO width
      cellValue = MGET(currentBoard,x,y)
      IF cellValue = 1 THEN
        line = line || '#'
      ELSE
        line = line || ' '
    END

    CALL FSSTEXT line, y+7, 3, , #WHITE+#PROT
  END

  key = FSSREFRESH()
  IF key = 243 THEN LEAVE /* F3 to close the program */

  userCommand = FSSFGET('ZCMD')
  CALL runCommand userCommand
  CALL FSSFSET 'ZCMD' ''
  CALL FSSCURSOR 'ZCMD'
END

CALL FSSCLOSE /* Terminate Screen Environment */
RETURN 0

runCommand:
  PARSE ARG firstPart secondPart

  IF firstPart = 'random' THEN CALL createRandomBoard
  IF firstPart = 'clear' THEN CALL clearBoard
  IF firstPart = '' THEN CALL performStep
  /* Predefined boards */
  IF firstPart = 'block' THEN CALL displayBlock
  IF firstPart = 'beehive' THEN CALL displayBeehive
  IF firstPart = 'blinker' THEN CALL displayBlinker
  IF firstPart = 'beacon' THEN CALL displayBeacon
  IF firstPart = 'glider' THEN CALL displayGlider

  IF datatype(firstPart) = 'NUM' & datatype(secondPart) = 'NUM' THEN CALL toggleCell firstPart secondPart

RETURN

createRandomBoard:
  DO y=1 TO height
    DO x=1 TO width
      CALL MSET(currentBoard,x,y, random(0,1))
    END
  END
RETURN

clearBoard:
  DO y=1 TO height
    DO x=1 TO width
      CALL MSET(currentBoard,x,y, 0)
    END
  END
RETURN

/* Predefined patterns */

displayBlock:
  CALL clearBoard
  CALL MSET(currentBoard,5,5,1)
  CALL MSET(currentBoard,5,6,1)
  CALL MSET(currentBoard,6,5,1)
  CALL MSET(currentBoard,6,6,1)
RETURN

displayBeehive:
  CALL clearBoard
  CALL MSET(currentBoard,5,5,1)
  CALL MSET(currentBoard,6,5,1)
  CALL MSET(currentBoard,4,6,1)
  CALL MSET(currentBoard,7,6,1)
  CALL MSET(currentBoard,5,8,1)
  CALL MSET(currentBoard,6,8,1)
RETURN

displayBlinker:
  CALL clearBoard
  CALL MSET(currentBoard,5,5,1)
  CALL MSET(currentBoard,6,5,1)
  CALL MSET(currentBoard,7,5,1)
RETURN

displayBeacon:
  CALL clearBoard
  CALL MSET(currentBoard,5,5,1)
  CALL MSET(currentBoard,6,5,1)
  CALL MSET(currentBoard,5,6,1)
  CALL MSET(currentBoard,6,6,1)

  CALL MSET(currentBoard,7,7,1)
  CALL MSET(currentBoard,7,8,1)
  CALL MSET(currentBoard,8,7,1)
  CALL MSET(currentBoard,8,8,1)
RETURN

displayGlider:
  CALL clearBoard
  CALL MSET(currentBoard,4,3,1)
  CALL MSET(currentBoard,5,4,1)
  CALL MSET(currentBoard,3,5,1)
  CALL MSET(currentBoard,4,5,1)
  CALL MSET(currentBoard,5,5,1)
RETURN

/* Actual logic goes here */

performStep:
RETURN